<h1>Burgers!</h1>
<h2>Eaten</h2>
    <ol>
        {{#each burgers}}
            {{#if Devoured}}
            <li> {{BurgerName}} </li>
            {{/if}}
        {{/each}}
    </ol>


<h2>Menu</h2>
    <ol>
        {{#each burgers}}
            {{#unless Devoured}} 
                <li>
                    {{BurgerName}}
                    <button class="eat" data-id="{{id}}" data-eaten="{{Devoured}}">Eat It!</button>
                </li>
            {{/unless}}
        {{/each}}
    </ol>

<h2>
    New Burger
</h2>
<input id='newBurgerInput'> 
<button id='submitBurger'>Eat It!</button>
